---
import { Button } from "@/components/ui/button";
---

<form name="contact" method="POST" class="max-w-2xl" netlify>
  <div class="space-y-6">
    <!-- Nombre -->
    <div>
      <label
        for="nombre"
        class="block text-sm font-medium text-(--color-offwhite) mb-2"
      >
        Tu nombre
      </label>
      <input
        type="text"
        id="nombre"
        name="nombre"
        required
        class="w-full px-4 py-3 rounded-lg border border-(--color-divider) bg-white text-(--color-text-primary) placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-(--color-mint) focus:border-transparent transition"
        placeholder="Juan"
      />
    </div>

    <!-- Email -->
    <div>
      <label
        for="email"
        class="block text-sm font-medium text-(--color-offwhite) mb-2"
      >
        Tu email
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-3 rounded-lg border border-(--color-divider) bg-white text-(--color-text-primary) placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-(--color-mint) focus:border-transparent transition"
        placeholder="juan@ejemplo.com"
      />
    </div>

    <!-- Teléfono -->
    <div>
      <label
        for="telefono"
        class="block text-sm font-medium text-(--color-offwhite) mb-2"
      >
        Tu teléfono (opcional)
      </label>
      <input
        type="tel"
        id="telefono"
        name="telefono"
        class="w-full px-4 py-3 rounded-lg border border-(--color-divider) bg-white text-(--color-text-primary) placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-(--color-mint) focus:border-transparent transition"
        placeholder="+54 9 11 1234-5678"
      />
    </div>

    <!-- Mensaje -->
    <div>
      <label
        for="mensaje"
        class="block text-sm font-medium text-(--color-offwhite) mb-2"
      >
        Tu mensaje
      </label>
      <textarea
        id="mensaje"
        name="mensaje"
        required
        rows="5"
        class="w-full px-4 py-3 rounded-lg border border-(--color-divider) bg-white text-(--color-text-primary) placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-(--color-mint) focus:border-transparent transition resize-none"
        placeholder="Cuéntanos qué estás usando hoy y qué te gustaría mejorar..."
      ></textarea>
    </div>

    <!-- Botón -->
    <div>
      <Button
        type="submit"
        size="lg"
        class="w-full bg-(--color-mint) text-(--color-indigo) hover:bg-(--color-mint)/90 font-semibold"
      >
        Enviar mensaje
      </Button>
    </div>
  </div>
</form>

<style>
  input:focus,
  textarea:focus {
    box-shadow: 0 0 0 3px rgba(167, 220, 192, 0.1);
  }
</style>
